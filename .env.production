# Production Environment Configuration
# Copy this file to .env for production deployment

# Database Configuration
# For production, use PostgreSQL instead of SQLite for better performance and concurrency
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/cochin_smart_city_production"

# Alternative: For continued SQLite use (not recommended for production)
# DATABASE_URL="file:/app/data/production.db"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-at-least-256-bits-long-random-string"
JWT_EXPIRE="7d"

# Server Configuration
PORT=4005
NODE_ENV="production"
CLIENT_URL="https://your-production-domain.com"

# CORS Configuration (comma-separated list)
CORS_ORIGIN="https://your-production-domain.com,https://admin.your-production-domain.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # requests per window

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH="/app/uploads"

# Email Configuration (Production SMTP)
EMAIL_SERVICE="smtp.yourmailserver.com"
EMAIL_USER="noreply@cochinsmartcity.gov.in"
EMAIL_PASS="your-secure-email-password"
EMAIL_PORT="587"
EMAIL_FROM="Cochin Smart City <noreply@cochinsmartcity.gov.in>"

# Security Headers
HELMET_CSP_ENABLED="true"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="/app/logs/application.log"

# Performance Monitoring
ENABLE_METRICS="true"

# Database Pool Configuration (for PostgreSQL)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
